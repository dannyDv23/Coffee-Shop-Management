<div class="page-inner">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">About Us</div>
                </div>
                <div class="card-body">
                    <div class="about-us container my-5">
                        <!-- About Us Section -->
                        <div class="row align-items-center mb-5">
                            <div class="col-md-6">
                                <h2 class="fw-bold text-primary mb-4">About Us</h2>
                                <p class="lead">We are <strong>“Technology From Future”</strong>, proud to present our
                                    Coffee Management Software, designed to revolutionize your coffee business.</p>
                                <p>This comprehensive solution caters to the unique needs of coffee shop owners,
                                    managers, and employees. Our software is crafted to optimize performance and deliver
                                    exceptional results.</p>
                                <p>Embrace the future of coffee management and experience streamlined operations, better
                                    employee management, improved customer satisfaction, and enhanced financial control.
                                </p>
                                <a href="#features" class="btn btn-outline-primary mt-3">Learn More</a>
                            </div>
                            <div class="col-md-6">
                                <img src="https://www.dragosroua.com/wp-content/uploads/2019/03/coffee-shop-1149155_1920.jpg"
                                    alt="Office Image" class="img-fluid rounded shadow-lg">
                            </div>
                        </div>

                        <!-- Key Features & Benefits Section -->
                        <div id="features" class="row text-center mt-5">
                            <h3 class="text-center mb-5 display-6 fw-bold">Key Features & Benefits</h3>

                            <!-- Feature Card 1 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-malibu h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-layer-group fs-1 color-malibu"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Streamlined Operations</h5>
                                        <p class="card-text">Integrates seamlessly with your systems to manage
                                            inventory, sales tracking, and operational efficiency.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Feature Card 2 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-mint h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-users-cog fs-1 color-mint"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Employee Management</h5>
                                        <p class="card-text">Manage staff with scheduling, performance tracking, and
                                            payroll management features for optimal productivity.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Feature Card 3 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-sunset h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-hand-holding-heart fs-1 color-sunset"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Customer Relationship Management</h5>
                                        <p class="card-text">Build strong relationships with advanced CRM tools, loyalty
                                            programs, and personalized marketing.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Feature Card 4 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-royal h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-chart-line fs-1 color-royal"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Financial Management</h5>
                                        <p class="card-text">Monitor expenses, manage budgets, and generate detailed
                                            financial reports for better decision-making.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Feature Card 5 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-arylide-yellow h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-people-carry fs-1 color-arylide-yellow"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Inventory Control</h5>
                                        <p class="card-text">Track real-time inventory, reduce waste, and get alerts for
                                            low stock to manage suppliers efficiently.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Feature Card 6 -->
                            <div class="col-md-4 mb-4">
                                <div class="card text-white bg-sky h-100">
                                    <div class="card-body text-center">
                                        <div class="icon-box mb-3 mx-auto bg-white rounded-circle d-flex align-items-center justify-content-center bg-white"
                                            style="width: 60px; height: 60px;">
                                            <i class="fas fa-dollar-sign fs-1 color-sky"></i>
                                        </div>
                                        <h5 class="card-title fw-bold">Sales and Analytics</h5>
                                        <p class="card-text">Access sales data, identify trends, and make data-driven
                                            decisions to drive growth and profitability.</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <!-- Our Team Section -->
                    <div class="our-team container my-5">
                        <h2 class="text-center mb-5 display-6 fw-bold">Our Team Dev</h2>
                        <div class="row text-center d-flex justify-content-center">
                            <% datas.forEach(data=> { %>
                                <div class="col-md-4 d-flex flex-column align-items-center">
                                    <div class="w-100" style="max-width: 200px; height: 250px;">
                                        <img src="<%= data.image %>" alt="John Roaster" class="img-fluid w-100 h-100">
                                    </div>
                                    <h5 class="mt-3 text-center">
                                        <%= data.name %>
                                    </h5>
                                    <p class="text-center">
                                        <%= data.position %>
                                    </p>
                                </div>

                                <% }); %>

                        </div>
                    </div>
                    <h2 class="text-center mb-5 display-6 fw-bold">Our Location</h2>
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d63536.63871717301!2d95.32870249999999!3d5.5611019!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3040377ae63dbcdf%3A0x3039d80b220cb90!2sBanda%20Aceh%2C%20Kota%20Banda%20Aceh%2C%20Aceh!5e0!3m2!1sid!2sid!4v1701054428265!5m2!1sid!2sid"
                        width="600" height="450" style="border: 0; width: 100%" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>