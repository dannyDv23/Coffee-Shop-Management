<div class="page-inner"></div>
    <div class="page-inner">
        <h1 class="mb-4">All Sales</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Discount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% sales.forEach(sale => { %>
                    <tr>
                        <td><%= sale.name %></td>
                        <td><%= new Date(sale.startDate).toLocaleDateString() %></td>
                        <td><%= new Date(sale.endDate).toLocaleDateString() %></td>
                        <td><%= sale.discount %> %</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="navigateToUpdate('<%= sale._id %>')">Update</button>
                            <button class="btn btn-danger btn-sm" onclick="deleteSale('<%= sale._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
<script>
    window.onload = function () {
        const token = localStorage.getItem("accessToken");
        if (token) {
            const userRole = getRoleFromToken(token);
            redirectUserByRole(userRole);
        }
    };
    function getRoleFromToken(token) {
        const base64Url = token.split(".")[1];
        const base64 = base64Url.replace(/-/g, "+").replace(/_/g, "/");
        const jsonPayload = decodeURIComponent(
            atob(base64)
                .split("")
                .map(function (c) {
                    return "%" + ("00" + c.charCodeAt(0).toString(16)).slice(-2);
                })
                .join("")
        );
        const decodedToken = JSON.parse(jsonPayload);

        return decodedToken.sub.role;
    }
    function navigateToUpdate(id) {
        window.location.href = `/sale/update/${id}`;
    }
    function deleteSale(id) {
        if (confirm('Are you sure you want to delete this sale?')) {
            fetch(`http://127.0.0.1:3000/api/sales/${id}`, {
                method: 'DELETE',
            })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete sale.');
                    }
                });
        }
    }
</script>