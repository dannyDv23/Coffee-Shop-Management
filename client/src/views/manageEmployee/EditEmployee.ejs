<div class="page-inner container-fluid px-5">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Employee</h2>
            <form onsubmit="updateEmployee(event)" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name"><span style="color: red">*</span> Full Name:</label>
                    <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            value="<%= employee.name %>"
                            required
                    />
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                            value="<%= employee.address %>"
                    />
                </div>
                <div class="form-group">
                    <label for="position"><span style="color: red">*</span> Position:</label>
                    <select class="form-control" id="position" name="position" required
                            style="background-color: #e9ecef; color: #6c757d;">
                        <option value="" disabled>Select Position ...</option>
                        <option value="Barista" <%= employee.position === 'Barista' ? 'selected' : '' %>>Barista
                        </option>
                        <option value="Waitstaff" <%= employee.position === 'Waitstaff' ? 'selected' : '' %>>Waitstaff
                        </option>
                        <option value="Cashier" <%= employee.position === 'Cashier' ? 'selected' : '' %>>Cashier
                        </option>
                        <option value="Shift Supervisor" <%= employee.position === 'Shift Supervisor' ? 'selected' : '' %>>
                            Shift Supervisor
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="salary"><span style="color: red">*</span> Salary:</label>
                    <input
                            type="number"
                            class="form-control"
                            id="salary"
                            name="salary"
                            value="<%= employee.salary %>"
                            required
                    />
                </div>
                <div class="form-group">
                    <label for="phoneNumber"><span style="color: red">*</span> Phone Number:</label>
                    <input
                            type="tel"
                            class="form-control"
                            id="phoneNumber"
                            name="phoneNumber"
                            value="<%= employee.phoneNumber %>"
                            required
                    />
                </div>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input
                            type="text"
                            class="form-control"
                            id="username"
                            name="username"
                            value="<%= employee.username %>"
                            readonly
                    />
                </div>
                <div class="form-group">
                    <label for="password">New Password:</label>
                    <input
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                    />
                </div>
                <div class="form-group">
                    <label for="retypePassword">Repeat Password:</label>
                    <input
                            type="password"
                            class="form-control"
                            id="retypePassword"
                            name="retypePassword"
                    />
                </div>
                <div class="form-group">
                    <label for="profilePicture">Profile Picture:</label>
                    <input
                            type="file"
                            class="form-control-file mt-2"
                            id="profilePicture"
                            name="profilePicture"
                            accept="image/*"
                            onchange="const preview = document.querySelector('#profile-picture');
                                    const file = document.querySelector('#profilePicture').files[0];
                                    if (file) {
                                    const reader = new FileReader();
                                    reader.onloadend = function() { preview.src = reader.result; }
                                    reader.readAsDataURL(file);
                                    } else {
                                    preview.src = '<%= employee.avatar.url %>'; // Reset to original if no file
                                    }"
                    />
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <button
                        type="button"
                        class="btn btn-secondary"
                        onclick="window.history.back();"
                >
                    Cancel
                </button>
                <p style="color: red">(*) Required fields</p>
                <p id="error" style="color: red"></p>
            </form>
        </div>
        <div class="col-md-6 mt-5 text-center">
            <div class="image-container">
                <img
                        id="profile-picture"
                        src="<%= employee.avatar.url %>"
                        class="img-thumbnail"
                        alt="Profile Picture"
                        style="
                        display: inline-block;
                        max-width: 100%;
                        height: 200px;
                        border-radius: 10px;
                        border: 2px solid #007bff;
                    "
                />
            </div>
            <button
                    type="button"
                    class="btn btn-secondary mt"
                    onclick="document.querySelector('#profile-picture').src = '<%= employee.avatar %>';"
            // Reset image
            >
            Cancel Image
            </button>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        border: 2px dashed #007bff;
        padding: 10px;
        border-radius: 10px;
        background-color: #f8f9fa;
        transition: background-color 0.3s;
    }

    .image-container:hover {
        background-color: #e9ecef;
    }

    .img-thumbnail {
        border-radius: 10px;
        border: 2px solid #007bff;
    }

    button.btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    button.btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<!-- JavaScript -->
<script>
    window.onload = function () {
        const token = localStorage.getItem("accessToken");
        if (!token) {
            window.location.href = "/login";
        }
    };

    async function updateEmployee(event) {
        event.preventDefault();

        const employeeData = new FormData(event.target);

        const password = document.getElementById("password").value;
        const retypePassword = document.getElementById("retypePassword").value;

        if (password || retypePassword) {
            if (password === retypePassword) {
                // If they match, both are already in employeeData, so nothing more is needed
            } else {
                document.getElementById("error").textContent = "Passwords do not match.";
                return;
            }
        } else {
            employeeData.delete("password");
            employeeData.delete("retypePassword");
        }

        try {
            const response = await fetch(
                `http://localhost:3000/api/employee/<%= employee._id %>`, // Ensure employee ID is passed correctly
                {
                    method: "PUT",
                    headers: {
                        Authorization: `Bearer ${localStorage.getItem("accessToken")}`, // No Content-Type header for FormData
                    },
                    body: employeeData,
                }
            );

            if (response.ok) {
                swal("Good job!", "Employee updated successfully!", "success").then(() => {
                    window.location.href = "/manage-employee";
                });
            } else {
                const errorData = await response.json();
                document.getElementById("error").textContent = errorData.message || "Failed to update employee.";
            }
        } catch (error) {
            console.error("Error updating employee:", error);
            document.getElementById("error").textContent = "An error occurred while updating.";
        }
    }
</script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
