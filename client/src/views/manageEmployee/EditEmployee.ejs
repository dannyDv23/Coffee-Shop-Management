<div class="page-inner container-fluid px-5">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Edit Employee</h2>
      <form onsubmit="updateEmployee(event)">
        <div class="form-group">
          <label for="name"><span style="color: red">*</span> Full Name:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= employee.name %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="address">Address:</label>
          <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            value="<%= employee.address %>"
          />
        </div>

        <% if (employee.role === "Employee") { %>
        <div class="form-group" style="display: none;">
        <% } else { %>
        <div class="form-group">
        
          <label for="position"
            ><span style="color: red">*</span> Position:</label
          >
          <input
            type="text"
            class="form-control"
            id="position"
            name="position"
            value="<%= employee.position %>"
            required
          />
        </div>

        <div class="form-group">
          <% } %>
          <label for="salary"><span style="color: red">*</span> Salary:</label>
          <input
            type="number"
            class="form-control"
            id="salary"
            name="salary"
            value="<%= employee.salary %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="phoneNumber"
            ><span style="color: red">*</span> Phone Number:</label
          >
          <input
            type="tel"
            class="form-control"
            id="phoneNumber"
            name="phoneNumber"
            value="<%= employee.phoneNumber %>"
            required
          />
        </div>

        <% if (employee.role === "Employee") { %>
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            value="<%= employee.username %>"
          />
        </div>
        <% } else { %>
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            value="<%= employee.username %>"
            readonly
          />
        </div>
        <% } %>

        <div class="form-group">
          <label for="password">New Password:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>

        <div class="form-group">
          <label for="password">Repeat Password:</label>
          <input
            type="password"
            class="form-control"
            id="retypePassword"
            name="retypePassword"
          />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <button
          type="button"
          class="btn btn-secondary"
          onclick="window.history.back();"
        >
          Cancel
        </button>
        <p style="color: red">(*) Required fields</p>
        <p id="error" style="color: red"></p>
      </form>
    </div>

    <div class="col-md-6 mt-5 text-center">
      <div class="image-container">
        <img
          id="profile-picture"
          src="<%= employee.avatar %>"
          class="img-thumbnail"
          alt="Profile Picture"
          style="
            display: inline-block;
            max-width: 100%;
            height: 200px;
            border-radius: 10px;
            border: 2px solid #007bff;
          "
        />
      </div>
      <button
        type="button"
        class="btn btn-secondary"
        onclick="document.getElementById('profile-picture').src = '';"
      >
        Cancel Image
      </button>
      <input
        type="file"
        class="form-control-file mt-2"
        id="profilePicture"
        name="profilePicture"
        onchange="
            const preview = document.querySelector('#profile-picture');
            const file = document.querySelector('#profilePicture').files[0];
            const reader = new FileReader();
  
            reader.onloadend = function() {
              preview.src = reader.result;
            };
  
            if (file) {
              reader.readAsDataURL(file);
            } else {
              preview.src = '';
            }
          "
      />
    </div>
  </div>
</div>

<!-- Styles -->
<style>
  .image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    border: 2px dashed #007bff;
    padding: 10px;
    border-radius: 10px;
    background-color: #f8f9fa;
    transition: background-color 0.3s;
  }

  .image-container:hover {
    background-color: #e9ecef;
  }

  .img-thumbnail {
    border-radius: 10px;
    border: 2px solid #007bff;
  }

  button.btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
  }

  button.btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
  }
</style>

<!-- JavaScript -->
<script>
  window.onload = function () {
    const token = localStorage.getItem("accessToken");
    if (!token) {
      window.location.href = "/login";
    }
  };

  async function updateEmployee(event) {
    event.preventDefault();
    
    const employeeData = {
      name: document.getElementById("name").value,
      address: document.getElementById("address").value,
      position: document.getElementById("position").value,
      salary: document.getElementById("salary").value,
      phoneNumber: document.getElementById("phoneNumber").value,
    };

    const password = document.getElementById("password").value;
    const retypePassword = document.getElementById("retypePassword").value;

    if (password && retypePassword) {
      if (password === retypePassword) {
        employeeData.password = password; // Add password to data if passwords match
      } else {
        document.getElementById("error").textContent =
          "Passwords do not match.";
        return;
      }
    }

    try {
      const response = await fetch(
        `http://localhost:3000/api/employee/<%= employee._id %>`,
        {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
            Authorization: `Bearer ${localStorage.getItem("accessToken")}`,
          },
          body: JSON.stringify(employeeData),
        }
      );

      if (response.ok) {
        swal("Good job!", "Employee updated successfully!", "success").then(
          () => {
            window.location.href = "/manage-employee";
          }
        );
      } else {
        const errorData = await response.json();
        document.getElementById("error").textContent =
          errorData.message || "Failed to update employee.";
      }
    } catch (error) {
      console.error("Error updating employee:", error);
      document.getElementById("error").textContent =
        "An error occurred while updating.";
    }
  }
</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
