        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        border: 2px dashed #007bff;
        padding: 10px;
        border-radius: 10px;
        background-color: #f8f9fa;
        transition: background-color 0.3s;
    }

