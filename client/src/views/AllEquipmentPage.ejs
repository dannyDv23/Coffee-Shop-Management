<div class="page-inner">
    <h1 class="mb-4">All Equipment</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Price</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% equipments.forEach(equipment=> { %>
                <tr>
                    <td>
                        <%= equipment.name %>
                    </td>
                    <td>
                        <%= equipment.quantity %>
                    </td>
                    <td>
                        <%= equipment.price %>
                    </td>
                    <td>
                        <%= equipment.totalPrice %>
                    </td>
                    <td>
                        <%= new Date(equipment.date).toLocaleDateString() %>
                    </td>
                    <td>
                        <%= equipment.status %>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm"
                            onclick="navigateToUpdate('<%= equipment._id %>')">Update</button>
                        <button class="btn btn-danger btn-sm"
                            onclick="deleteEquipment('<%= equipment._id %>')">Delete</button>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>
<script>
    window.onload = function () {
        const token = localStorage.getItem("accessToken");
        if (token) {
            const userRole = getRoleFromToken(token);
            redirectUserByRole(userRole);
        }
    };
    function getRoleFromToken(token) {
        const base64Url = token.split(".")[1];
        const base64 = base64Url.replace(/-/g, "+").replace(/_/g, "/");
        const jsonPayload = decodeURIComponent(
            atob(base64)
                .split("")
                .map(function (c) {
                    return "%" + ("00" + c.charCodeAt(0).toString(16)).slice(-2);
                })
                .join("")
        );
        const decodedToken = JSON.parse(jsonPayload);

        return decodedToken.sub.role;
    }
    function navigateToUpdate(id) {
        window.location.href = `/equipment/update/${id}`;
    }
    function deleteEquipment(id) {
        if (confirm('Are you sure you want to delete this equipment?')) {
            fetch(`http://127.0.0.1:3000/api/equipments/${id}`, {
                method: 'DELETE',
            })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete equipment.');
                    }
                });
        }
    }
</script>