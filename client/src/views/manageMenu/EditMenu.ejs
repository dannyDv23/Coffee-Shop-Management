                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="button" class="btn btn-danger">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Array to hold materials
    let materials = [];
    const materialData = document.getElementById('materialTableBody').getAttribute('data-material');

    // Parse the JSON string into an array of objects
    try {
        materials = JSON.parse(materialData);
    } catch (e) {
        console.error("Error parsing materials data: ", e);
    }

    // Ensure materials is now an array of objects that can be worked with
    console.log("Materials loaded: ", materials);

    // Function to load materials into the table
    function loadMaterials() {
        const tableBody = document.getElementById('materialTableBody');
        tableBody.innerHTML = ''; // Clear existing rows

        materials.material.forEach((material, index) => {
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
            <td>${material.materialId.name}</td>
            <td>${material.quantityUsed}</td>
            <td>${material.materialId.unit}</td>
            <td>
                <div class="form-button-action">
                    <button type="button" class="btn btn-link btn-primary btn-lg" onclick="editRow(${index})">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-link btn-danger" onclick="removeRow(${index})">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </td>
        `;
            tableBody.appendChild(newRow);
        });
    }
    loadMaterials();
    document.getElementById('addRowButton').addEventListener('click', function () {
        const selectedMaterial = document.getElementById('materialSelect');
        const materialId = selectedMaterial.value;
        const materialName = document.getElementById('addMaterialName').value;
        const materialQuantity = document.getElementById('addMaterialQuantity').value;
        const materialUnit = document.getElementById('addMaterialUnit').value;
        const availableQuantity = selectedMaterial.options[selectedMaterial.selectedIndex].getAttribute('data-quantity');

        if (!materialId || !materialQuantity || !materialUnit) {
            alert('Please fill all fields before adding.');
            return;
        }

        if (parseInt(materialQuantity) > parseInt(availableQuantity)) {
            alert(`Quantity exceeds available stock. Available: ${availableQuantity}`);
            return;
        }

        const newMaterial = {
            materialId: {
                _id: materialId,
                name: materialName,
                unit: materialUnit,
            },
            quantityUsed: materialQuantity
        };

        materials.material.push(newMaterial); // Update the material array

        loadMaterials(); // Reload table
        // Clear input fields
        document.getElementById('addMaterialQuantity').value = '';
        document.getElementById('addMaterialUnit').value = '';
        selectedMaterial.selectedIndex = 0;
        $('#addRowModal').modal('hide');
    });

    // Function to remove a row
    function removeRow(index) {
        materials.material.splice(index, 1); // Remove from array
        loadMaterials(); // Reload table
    }

    // Function to edit a row
    function editRow(index) {
        const material = materials.material[index];
        document.getElementById('materialSelect').value = material.materialId._id;
        document.getElementById('addMaterialQuantity').value = material.quantityUsed;
        document.getElementById('addMaterialUnit').value = material.materialId.unit;

        materials.material.splice(index, 1); // Remove the selected material for re-adding
        $('#addRowModal').modal('show');
    }

    // Function to update the unit input based on selected material
    function updateMaterialUnit() {
        const selectedMaterial = document.getElementById('materialSelect');
        const unitInput = document.getElementById('addMaterialUnit');
        const nameInput = document.getElementById('addMaterialName');
        const selectedOption = selectedMaterial.options[selectedMaterial.selectedIndex];

        if (selectedOption.value) {
            unitInput.value = selectedOption.dataset.unit; // Assuming unit is stored in data-unit attribute
            nameInput.value = selectedOption.dataset.name;
        } else {
            unitInput.value = ''; // Clear unit if no material is selected
            nameInput.value = '';
        }
    }
</script>




<script>
    document.getElementById('importMaterialForm').addEventListener('submit', async function (event) {
        event.preventDefault();

        // Gather form data
        const name = document.getElementById('material2').value;
        const price = parseFloat(document.getElementById('price2').value);
        const date = document.getElementById('Date').value;
        const quantity = parseInt(document.getElementById('quantity2').value, 10);
        const unit = document.getElementById('defaultSelect').value;

        // Create the material data structure
        const materialData = {
            name: name,
            unit: unit,
            totalQuantity: quantity,
            pricePerUnit: price,
            importHistory: [
                {
                    dateImport: date,
                    quantity: quantity,
                    price: price * quantity
                }
            ],
            exportHistory: []
        };

        // Send the data to the API
        try {
            const response = await fetch('http://localhost:3000/api/material', {
                method: 'POST',
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(materialData)
            });

            if (!response.ok) {
                throw new Error('Error while importing material.');
            }

            const responseData = await response.json();
            console.log('Material imported successfully:', responseData);

            // Optionally, redirect or show a success message
            alert('Material imported successfully!');
            location.reload();
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to import material.');
        }
    });
</script>